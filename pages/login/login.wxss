/* pages/login/login.wxss */
#main{
  width: 100%;
  height: 100%;
}
.red{
  color: red;
}
.txt{
  /* background-color: red;? */
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.top{
  width: 100%;
  height: 100rpx;
  /* background-color: yellowgreen; */
}
.inp{
  width: 90%;
  margin: auto;
  margin-top: 20rpx;
  padding: 10rpx;
  padding-left: 25rpx;
  border: 1px solid #ccc;
  border-radius: 25rpx;
}
.tion{
  width: 100%;
  height: 130rpx;
  background-color: #EFEFF4;
  display: flex;
}
.pos{
  width: 90%;
  height: 90rpx;
  margin: auto;
  background-color: white;
  border: 1px solid #ccc;
  border-radius: 20rpx;
  font-size: 35rpx;
  padding-left: 30rpx;
}
.nav{
  /* margin-top: 10rpx; */
  margin-top: 20rpx;
  width: 100%;
  height: auto;
}
.nav>view{
  width: 100%;
  height: 200rpx;
  border-bottom: 1px solid #ccc;
  /* margin-bottom: 20rpx; */
  clear: both;
}
.nav>view:last-child{
  border: 0px;
  margin-bottom: 0rpx;
}
.nav image{
  width: 100%;
  height: 100%;
}
.left{
  float: left;
  width: 170rpx;
  height: 160rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
  margin-right: 20rpx;
}
.center{
  font-size: 30rpx;
  float: left;
  width: 53%;
  height: 100%;
  margin-top: 28rpx;
  line-height: 50rpx;
}
.right{
  float: right;
  font-size: 30rpx;
  height: 100%;
  color: red;
  width: 19%;
  line-height: 200rpx;
}