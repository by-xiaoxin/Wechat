/**index.wxss**/

#main{
  width: 100%;
  height: 100%;
}
.red{
  color: red;
}
.slide-image{
  width: 100%;
}
.tab{
  width: 100%;
  height: 180rpx;
  display: flex;
}
#tab_1{
  text-align: center;
  font-size: 30rpx;
  margin: auto;
  width: 80rpx;
  height: 90rpx;
}
.tab image{
  width: 100%;
  height: 100%;
}
.nav{
  font-size: 25rpx;
  width: 100%;
  height: auto;
  margin-top: 15px;
}
.all{
  width: 100%;
  height: auto;
}
.nav>view{
  width: 100%;
  height: 200rpx;
  border: 1px solid #ccc;
  clear: both;
}
.nav image{
  width: 100%;
  height: 100%;
}

.nav>view>view:first-child{
  float: left;
  width: 170rpx;
  height: 160rpx;
  padding: 20rpx;
}
.nav>view>view:last-child{
  float: left;
  width: 70%;
  margin-top: 15rpx;
  line-height: 50rpx;
}
.right{
  width: 100%;
  height: 100%;
  position: relative;
}
.right>view:last-child{
  position: absolute;
  top: 33%;
  left: 180px;
  width: 80rpx;
  height: 80rpx;
  background-color: red;
  line-height: 80rpx;
  text-align: center;
  border-radius: 50%;
  color: white;
}
.scro{
  width: 100%;
  height: 1500rpx;
}
