/* pages/adds/adds.wxss */
#main {
  width: 100%;
  height: 100%;
}

.nav {
  font-size: 30rpx;
  width: 86%;
  height: 600rpx;
  margin: auto;
  margin-top: 60rpx;
}

.nav_1 {
  display: flex;
  width: 78%;
  margin: auto;
  line-height: 50rpx;
  margin-bottom: 30rpx;
  /* background-color: coral; */
}

.nav_2 {
  font-size: 27rpx;
  display: flex;
  width: 70%;
  margin: auto;
  line-height: 50rpx;
  margin-bottom: 30rpx;
}

.nav_2>text {
  border: 1px solid #ccc;
  border-radius: 5px;
}

.inp {
  width: 70%;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  padding-left: 15rpx;
}

.asd {
  border: 1px solid #ccc;
  width: 46%;
  margin-right: 20rpx;
  border-radius: 3px;
  padding-left: 12rpx;
  margin-left: 30px;
}

.picker {
  display: flex;
  width: 78%;
  margin: auto;
  line-height: 50rpx;
  margin-bottom: 30rpx;
}

.bor {
  width: 70%;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  padding-left: 15rpx;
  margin-left: 26rpx;
}

.tom {
  background-color: red;
  width: 68%;
  margin: auto;
  height: 66rpx;
  line-height: 66rpx;
  border-radius: 12rpx;
  text-align: center;
  color: white;
  font-size: 35rpx;
  margin-top: 40rpx;
}