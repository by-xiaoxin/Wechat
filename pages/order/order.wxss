/* pages/order/order.wxss */
#main {
  width: 100%;
  height: 100%;
}

.top {
  width: 100%;
  height: 360rpx;
}

.top image {
  width: 100%;
  height: 100%;
}

.bg {
  width: 100%;
  height: 150rpx;
  background-color: #EFEFF4;
  display: flex;
}

.bg>view {
  font-size: 32rpx;
  padding-left: 20rpx;
  width: 94%;
  height: 120rpx;
  background-color: white;
  border-radius: 8px;
  margin: auto;
  line-height: 40rpx;
}

.bg_1 {
  margin-top: 20rpx;
}

.nav {
  width: 86%;
  margin: auto;
  height: 500rpx;
  margin-top: 30rpx;
}

.section {
  width: 48%;
  float: left;
  /* display: flex; */
}

.pic1 {
  margin-right: 18rpx;
  width: 40rpx;
  height: 40rpx;
}

.pic2 {
  margin-right: 18rpx;
  width: 40rpx;
  height: 40rpx;
}

.pic1 image {
  width: 100%;
  height: 100%;
}

.pic2 image {
  width: 100%;
  height: 100%;
}

.wap {
  width: 100%;
  height: 50rpx;
  font-weight: bold;
  margin: auto;
  text-align: center;
}

picker {
  width: 100%;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
}

.picker {
  display: flex;
  /* border: 1px solid #ccc; */
}

.bor {
  width: 70%;
  padding-left: 13rpx;
  font-size: 32rpx;
  border: 1px solid #ccc;
  border-radius: 5px;
  color: #666;
}

.bom {
  font-size: 30rpx;
  clear: both;
  width: 100%;
  height: 200rpx;
  /* background-color: antiquewhite; */
}

.bom>view:first-child {
  font-size: 32rpx;
  font-weight: bold;
  padding-top: 15rpx;
  padding-bottom: 17rpx;
}

.inp {
  width: 96%;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin: auto;
  margin-bottom: 40rpx;
}

.btn {
  font-size: 34rpx;
  font-weight: bold;
  width: 90%;
  height: 70rpx;
  margin: auto;
  line-height: 70rpx;
  border-radius: 12rpx;
  text-align: center;
  color: white;
  background-color: red;
}